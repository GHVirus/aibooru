<% if source.present? %>
  <% tags = source.artists.map(&:name) %>
  <% tags += ["banned_artist"] if source.artists.any?(&:is_banned?) %>
  <% tags += source.translated_tags.map(&:name) %>
  <%= render "related_tags/tag_column", tags: tags, class: "card p-2 translated-tags-related-tags-column", title: "Translated" %>
<% else %>
  <%= render "related_tags/tag_column", tags: [], class: "card p-2 translated-tags-related-tags-column", title: "Translated" %>
<% end %>
