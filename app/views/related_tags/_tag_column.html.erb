<%# tags, title, class %>

<%= tag.div class: ["tag-column", local_assigns[:class], ("hidden" if tags.blank?)] do %>
  <% if tags.present? %>
    <h3 class="flex items-center space-x-1">
      <input type="checkbox" class="invisible">
      <span><%= title %></span>
    </h3>
    <%= render_related_tag_list(tags) %>
  <% end %>
<% end %>
